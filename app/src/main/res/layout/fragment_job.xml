<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.jobFragment">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/logo_layout"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="0dp" android:layout_marginEnd="0dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true">

        <ImageView
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/imageView4"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/payment_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_layout">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="50dp">

          <LinearLayout
                  android:layout_width="250dp"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:text="Total Earning"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_height="wrap_content" android:id="@+id/textView11"/>

    <TextView android:layout_width="wrap_content"
              android:textSize="12dp"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:text="This month"/>
</LinearLayout>
              <TextView
                      android:text="25000.00"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:textSize="15dp"
                      android:textColor="#2196F3"
                      android:fontFamily="sans-serif-black"
                      android:id="@+id/textView12" android:gravity="center_horizontal"/>

          </LinearLayout>
            <View android:layout_width="2dp" android:layout_height="match_parent"
            android:background="#2196F3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
            <LinearLayout
                    android:layout_width="150dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">


                    <TextView
                            android:text="To be paid"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView111"/>

                <TextView
                        android:text="25000.00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="#2196F3"
                        android:fontFamily="sans-serif-black"
                        android:id="@+id/textView112" android:gravity="center_horizontal"/>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:id="@+id/view_A"
          android:layout_height="1.5dp"
          android:background="#2196F3"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_below="@id/payment_section"
          android:layout_marginBottom="5dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_below="@id/view_A"
                    android:layout_alignParentStart="true"
                    android:id="@+id/Today_order"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                    android:layout_alignParentLeft="true">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
android:orientation="horizontal">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20dp"
              android:text="Today's Order "
              android:textColor="@color/black"
              android:gravity="center_horizontal"/>

</LinearLayout>
        <LinearLayout
                android:id="@+id/detail_order"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_below="@id/heading">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="250dp"
                    android:gravity="end"
                    android:layout_height="match_parent">


                <TextView
                        android:text="Reporting Place"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"/>
                <TextView
                        android:text="H.No 23232/3,Sangam Vihar ,New Delhi"
                        android:layout_width="match_parent"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="2dp"
                        android:textColor="#2196F3"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"/>


                <TextView
                        android:text="Customer Name "
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"/>
                <TextView
                        android:text="Rahul Srivastav"
                        android:layout_width="match_parent"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="2dp"
                        android:textColor="#2196F3"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"/>

                <TextView
                        android:text="Report Time "
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"/>
                <TextView
                        android:text="10:00 Am"
                        android:layout_width="match_parent"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="2dp"
                        android:textColor="#2196F3"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21"/>
                <TextView
                        android:text="Duty Time "
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView19"/>
                <TextView
                        android:text="3 hrs"
                        android:layout_width="match_parent"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="2dp"
                        android:textColor="#2196F3"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"/>


            </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent"
               android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_below="@+id/heading">


            <TextView
                    android:text="Launch in map"
                    android:layout_width="match_parent"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/button_rounded"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="20dp"
                    android:id="@+id/textView24" android:gravity="center_horizontal"/>

            <TextView
                    android:text="Call"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/button_rounded"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/textView25" android:gravity="center_horizontal"/>

        </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                      android:layout_below="@id/detail_order">
            <TextView android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:layout_marginLeft="60dp"
                      android:textColor="@color/white"
                      android:fontFamily="sans-serif-black"
                      android:layout_marginRight="60dp"

                      android:background="@drawable/button_rounded"
                      android:text="Job served Feedback"
                      android:textAlignment="center"
                      android:gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>